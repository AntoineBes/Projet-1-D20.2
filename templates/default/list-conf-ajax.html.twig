                                            <div class="schedule_content">
                                                <div class="schedule_time">{{ conf['timeDate'] }}</div>
                                                <div class="schedule_title">{{ conf['title'] }}</div>
                                                <div class="schedule_info">{{ conf['intervenant'] }}</div>
                                            </div>
                                        </li>
                                        </a>
                                        <br>
                                        {% endfor %}                                                                                
                                    </ul>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        
                        
                    </div>
                </div>
            </div>
            
