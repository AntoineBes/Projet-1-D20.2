{% extends 'base.html.twig' %}
{% block title %}S'inscrire - CONF2000 {% endblock %}
{% block body %}

    <center>
        <div class="col-xl-6 order-xl-2 order-1">
            <div class="contact_content">
                <div class="contact_title">Formulaire d'inscription</div>
                <div class="contact_text">
                    <p>Vos donn√©es seront revendues aux plus offrant !</p>
                </div>

                <div class="contact_form_container">
                    {{ form_start(form, {'attr': {'class': 'contact_form'}}) }}
                    <div class="d-flex flex-md-row flex-column align-items-start justify-content-between">                        
                        <div>{{ form_widget(form.firstname, {'attr': {'placeholder': 'Prenom...', 'class': 'contact_input'}}) }} </div>
                        <div>{{ form_widget(form.lastname, {'attr': {'placeholder': 'Nom...', 'class': 'contact_input'}}) }} </div>                        
                    </div>
                    {{ form_widget(form.email, {'attr': {'placeholder': 'Email...', 'class': 'contact_input'}}) }} 
                    <div class="d-flex flex-md-row flex-column align-items-start justify-content-between">                        
                        <div>{{ form_widget(form.password.first, {'attr': {'placeholder': 'Mot de passe...', 'class': 'contact_input'}}) }} </div>
                        <div>{{ form_widget(form.password.second, {'attr': {'placeholder': 'Confirmation...', 'class': 'contact_input'}}) }} </div>                        
                    </div>
                    {{ form_row(form.submit, {'label': 'Inscription !', 'attr': {'class': 'contact_button'}}) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </center>    

{% endblock %}



